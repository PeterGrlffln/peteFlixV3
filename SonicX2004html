    <script>
        window.onload = function() {
            var movies = document.getElementsByClassName('movie');
            for (var i = 0; i < movies.length; i++) {
                movies[i].addEventListener('click', function() {
                    alert('Enjoy your tv show!');
                });
            }
        };
